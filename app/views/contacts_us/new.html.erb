<div class="page-header text-center">
  <h1>Contact Us</h1>
</div>

<div class="row">
  <div class="jumbotron col-md-6 col-md-offset-3 background-img">
    <%= form_for(:contact, url: new_contacts_u_path) do |f| %>
        <%= render 'shared/flash' %>

        <%= f.label :name, class: 'bright-text'%>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, class: 'bright-text'%>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :message, class: 'bright-text' %>
        <%= f.text_field :message, class: 'form-control' %>

        <%= f.submit 'Send', class: 'btn btn-primary btn-grd bright-text' %>
    <% end %>
  </div>
</div>
