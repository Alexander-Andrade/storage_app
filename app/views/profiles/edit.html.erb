<% provide(:title, 'Edit Profile') %>
<div class="page-header text-center">
  <h1>Edit Profile</h1>
</div>

<div class="row">
  <div class="jumbotron col-md-6 col-md-offset-3 background-img">
    <%= form_for(@user, url: profile_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name , class: 'bright-text'%>
        <%= f.text_field :name, disabled: true, class: 'form-control' %>

        <%= f.label :email, class: 'bright-text'%>
        <%= f.email_field :email, disabled: true, class: 'form-control' %>

        <%= f.label :birth_date, class: 'bright-text'%>
        <%= f.date_field :birth_date, class: 'form-control' %>

        <%= f.label :country, class: 'bright-text'%>
        <%= f.text_field :country, class: 'form-control' %>

        <%= f.label :language, class: 'bright-text'%>
        <%= f.text_field :language, class: 'form-control' %>

        <%= f.label :mobile, class: 'bright-text'%>
        <%= f.telephone_field :mobile, class: 'form-control' %>

        <%= f.submit 'Update profile', class: 'btn btn-primary bright-text' %>
    <% end %>
  </div>
</div>
