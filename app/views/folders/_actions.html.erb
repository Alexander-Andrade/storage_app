<div class="dropdown">
  <button class="dropdown-toggle btn btn-default" type="button" data-toggle="dropdown">Actions
    <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <!--<li><%= link_to 'File', new_record_path%></li>-->
    <li><%= link_to 'File',   {controller: 'records', action: 'new', folder_id: folder.id } %></li>
    <li><%= link_to 'Folder', {controller:'folders', action:'new',   folder_id: folder.id } %></li>
    <% if (not folder.root?) %>
      <li class="divider"></li>
      <li><%= link_to 'Delete', folder_path(folder), method: :delete, data: { confirm: "Are you sure that you with to delete #{folder.name}?" } %></li>
    <% end %>
  </ul>
</div>