<tr>
  <td class="folder">
    <p><%= folder.name %></p>
    <p><%= folder.owner %></p>
  </td>
  <td><%= render( partial: 'folders/folders', locals: { folder: folder,  folders: folder.folders }) if folder.folders %></td>
  <td><%= render( partial: 'records/records', locals: { folder: folder,  records: folder.records }) if folder.records %></td>
</tr>